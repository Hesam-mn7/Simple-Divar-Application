<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDaste"
    android:layoutDirection="rtl">
    <ListView
        android:id="@+id/listviewdaste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="#F4F4F4"
        >
        <Button
            android:id="@+id/btagahi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="آگهی ها"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/smal_divar"

            />
        <Button
            android:id="@+id/btdasteha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دسته ها"
            android:paddingTop="5dp"
            android:textColor="@color/colorRed"
            android:drawableTop="@drawable/ic_listred"
            android:background="#F4F4F4"
            />
        <Button
            android:id="@+id/btsabt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ثبت آگهی"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_baseline_add_circle_24"/>
        <Button
            android:id="@+id/btchat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="چت"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_baseline_chat_bubble_24"/>
        <Button
            android:id="@+id/btdivareman"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دیوار من"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_outline_account_box_24"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>