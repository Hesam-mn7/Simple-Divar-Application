<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityMyAgahi"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/tozih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="کاربر عزیز شما وارد حساب کاربری خود شده اید و آگهی های ثبت شده را می توانید مشاهده کنید."
        android:textSize="15.5sp"
        android:textColor="#000"
        />

    <Button
        android:id="@+id/btnhazf"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="خروج از حساب"
        android:background="@drawable/shape_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tozih"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        />
    <View
        android:id="@+id/view"
        style="@style/view2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnhazf"/>

    <ListView
        android:id="@+id/myListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:paddingBottom="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="#F4F4F4"
        >
        <Button
            android:id="@+id/btagahi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="آگهی ها"
            android:paddingTop="5dp"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/smal_divar"

            />
        <Button
            android:id="@+id/btdasteha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دسته ها"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_baseline_list_24"
            android:background="#F4F4F4"
            />
        <Button
            android:id="@+id/btnsabtagahi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ثبت آگهی"
            android:paddingTop="5dp"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_baseline_add_circle_24"/>
        <Button
            android:id="@+id/btchat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="چت"
            android:paddingTop="5dp"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_baseline_chat_bubble_24"/>
        <Button
            android:id="@+id/btdivareman"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دیوار من"
            android:paddingTop="5dp"
            android:background="#F4F4F4"
            android:textColor="@color/colorRed"
            android:drawableTop="@drawable/accont_red"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>