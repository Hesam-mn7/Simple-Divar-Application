<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySabtAgahi"
    android:layoutDirection="rtl"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:text="عکس آگهی :"
            style="@style/edit"/>
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/tvidax"
            android:layout_gravity="center"
            android:src="@drawable/afzodanax"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="عنوان آگهی :"
            style="@style/edit"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/etname"
            style="@style/sabt"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="قیمت :"
            style="@style/edit"
            />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/etvalue"
            style="@style/sabt"/>

        <TextView
            android:layout_width="match_parent"
            android:text="نام محله :"
            style="@style/edit"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/ettime"
            style="@style/sabt"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="شماره تلفن :"
            style="@style/edit"
            />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/etnumberPhone"
            style="@style/sabt"
            android:inputType="phone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="جزئیات :"
                style="@style/edit"/>

            <EditText
                android:id="@+id/etdetails"
                style="@style/sabt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnsabt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ثبت آگهی"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_red"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/size_note"/>

        </LinearLayout>


    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="#F4F4F4"
        >
        <Button
            android:id="@+id/btagahi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="آگهی ها"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/smal_divar"

            />
        <Button
            android:id="@+id/btdasteha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دسته ها"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:drawableTop="@drawable/ic_baseline_list_24"
            android:background="#F4F4F4"
            />
        <Button
            android:id="@+id/btsabt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ثبت آگهی"
            android:paddingTop="5dp"
            android:textColor="@color/colorRed"
            android:background="#F4F4F4"
            android:textStyle="bold"
            android:drawableTop="@drawable/ic_baseline_add_red"/>
        <Button
            android:id="@+id/btchat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="چت"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_baseline_chat_bubble_24"/>
        <Button
            android:id="@+id/btdivareman"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="دیوار من"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:background="#F4F4F4"
            android:drawableTop="@drawable/ic_outline_account_box_24"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>